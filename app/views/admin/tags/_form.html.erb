<% if @tag.errors.any? %>
<div class="alert alert-warning" role="alert">
  <% @tag.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</div>
<% end %>

<div class="form-group">
  <%= f.label "名稱" %>:
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label "標籤類型" %>:
  <%= f.select :source_type, Tag::SOURCE_TYPES, class: "form-control" %><br>

  <%= f.submit "確認", data: {disable_with: '儲存中...'}, class: "btn btn-primary"%>
</div>
