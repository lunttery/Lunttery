<%= link_to "新增", new_shop_path %>
<table class="table">
  <thead>
    <th>名稱</th>
    <th>電話</th>
    <th>地址</th>
    <th>評分</th>
    <th>經度</th>
    <th>緯度</th>
    <th></th>
  </thead>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.phone %></td>
        <td><%= shop.address %></td>
        <td><%= shop.rate %></td>
        <td><%= shop.lng %></td>
        <td><%= shop.lat %></td>
        <td>
          <%= link_to "編輯", edit_shop_path(shop) %>
          <%= link_to "刪除", shop_path(shop), method: :delete, data: {confirm: "你確定嗎？刪錯要重打歐！！！" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
